<style>
    #addd {
      position: fixed;
      display: block;
      right: 0;
      bottom: 0;
      margin-right: 40px;
      margin-bottom: 40px;
      z-index: 900;
    }
    </style>


<main>


  
  <p id="notice"><%= notice %></p>
    <div class="container-fluid">
    <div class="row">

    <h1>Customers</h1>

    <div class="col m12 sm12">
  

  <div   class="card grey lighten-4">
    <div class="card-content">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cname</th>
      <th>Addr</th>
      <th>Mob</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr onclick="location.href='<%=profile_path(profile)%>'">
    
        <td data-field="id"><%= profile.name %></td>
        <td data-field="id"><%= profile.cname %></td>
        <td data-field="id"><%= profile.addr %></td>
        <td data-field="id"><%= profile.mob %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>
</div>

